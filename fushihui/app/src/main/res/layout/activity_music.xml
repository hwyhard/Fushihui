<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hwyhard.www.fushihui.activity.MusicActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#9e9e9e"
        android:padding="8dp"
        >
        <ImageView
            android:id="@+id/music_pic"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/music_pic">
            <ImageView
                android:id="@+id/music_play_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="true"
                />
            <TextView
                android:id="@+id/music_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_gravity="center_vertical"
                android:text="0:00"/>
            <SeekBar
                android:id="@+id/music_bar"
                android:layout_width="200dp"
                android:layout_height="6dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/music_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="4:00"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
    </RelativeLayout>
m
</ScrollView>
